<h1><%= @cocktail.name %></h1>
<p>
  <% @cocktail.doses.each do |dose| %>
    <%= dose.ingredient.name %>
    <%= dose.description %>
    <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure bitch ?" } %>
  <% end %>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
</p>

<%= link_to "Add doses", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Back to cocktail list", cocktails_path %>
